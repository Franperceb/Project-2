<div class="signup">
<div class= "signup-cont">
  <h2><i class="fas fa-user-plus"></i>Signup</h2>
<a href="/auth/google" id="google-login">Sign up with Google</a>
  <hr class="uk-divider-icon" />
  <form action="/signup" method="POST">
    <input 
    type="username"
     name="username" 
     placeholder="username"/>
    <input 
    type="email"
    name="email"
    placeholder="Email" />

    <div  >
         <input
     type="password" 
     name="password" 
     placeholder="Password" 
     id="pass" >
      <button
     type="button"  
    class="eye" 
    onclick="showpass()"><i class="far fa-eye"></i></button>
    </div> 
    <p class="strength " id ="length"></p>
    <input 
    id="submit"
    type="submit"
    value="Register">
</form>
  <p>Do you already have an account?<a href="/signup">Log in</a></p>
</div>
</div>

